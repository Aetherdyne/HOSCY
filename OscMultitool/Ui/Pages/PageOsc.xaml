<Page x:Class="OscMultitool.Ui.Pages.PageOsc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OscMultitool"
      xmlns:ui="clr-namespace:OscMultitool.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="689"
      Title="PageOsc">

    <ScrollViewer Margin="16,8,8,8" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <WrapPanel>
                <Label Content="Open Sound Control" Foreground="White" FontSize="30" FontFamily="Microsoft YaHei UI" FontWeight="Bold"/>
                <Button Content="Modify Routing" Margin="16,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_ModifyRouting" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Microsoft YaHei UI" FontSize="18" Width="147"/>
            </WrapPanel>

            <!-- Connection -->
            <StackPanel>
                <Label Content="Connection" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI" FontWeight="Bold"/>

                <StackPanel Margin="8,4,0,0">
                    <WrapPanel>
                        <TextBox x:Name="oscOscIp" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{Binding Osc.Ip, Source={x:Static local:Config.Data}}" VerticalAlignment="Center" Width="120" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                        <Label Content="OSC IP out" Foreground="White" FontSize="18" FontFamily="Microsoft YaHei UI"/>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBox x:Name="oscOscPort" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White">
                            <TextBox.Text>
                                <Binding Source="{x:Static local:Config.Data}" Path="Osc.Port" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ui:IntegerValidationRule Min="1" Max="65535"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="OSC port out" Foreground="White" FontSize="18" FontFamily="Microsoft YaHei UI"/>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBox x:Name="oscOscPortIn" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White">
                            <TextBox.Text>
                                <Binding Source="{x:Static local:Config.Data}" Path="Osc.PortListen" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ui:IntegerValidationRule Min="1" Max="65535"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="OSC port in" Foreground="White" FontSize="18" FontFamily="Microsoft YaHei UI"/>
                        <Button Content="↻" VerticalAlignment="Center"  Click="Button_ReloadListener" FontSize="14" FontFamily="Microsoft YaHei UI" Height="22" FontWeight="Bold" Background="{x:Null}" BorderBrush="White" Foreground="White"/>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>

            <!-- Addresses -->
            <StackPanel Margin="0,16,0,0">
                <Label Content="Addresses" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI" FontWeight="Bold"/>

                <StackPanel Margin="8,4,0,0">
                    <StackPanel>
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Manual mute address" Foreground="White" FontSize="18" FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscMuteAddress" TextWrapping="NoWrap" Text="{Binding Osc.AddressManualMute, Source={x:Static local:Config.Data}}" Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Microphone listening indicator address" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscListenIndicator" TextWrapping="NoWrap" Text="{Binding Osc.AddressListeningIndicator, Source={x:Static local:Config.Data}}" Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Clear TTS address" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscSkipTtsAddress" TextWrapping="NoWrap" Text="{Binding Osc.AddressManualSkipSpeech, Source={x:Static local:Config.Data}}" Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Clear textbox address" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscSkipTextAddress" TextWrapping="NoWrap" Text="{Binding Osc.AddressManualSkipBox, Source={x:Static local:Config.Data}}" Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel  Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="TTS input address" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscAddTts" TextWrapping="NoWrap" Text="{Binding Osc.AddressAddTts, Source={x:Static local:Config.Data}}" Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Textbox input address" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscAddTextbox" TextWrapping="NoWrap" Text="{Binding Osc.AddressAddTextbox, Source={x:Static local:Config.Data}}"  Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,4,0,0">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Textbox input notification" Foreground="White" FontSize="18"  FontFamily="Microsoft YaHei UI"/>
                        <TextBox x:Name="oscOscAddNotification" TextWrapping="NoWrap" Text="{Binding Osc.AddressAddNotification, Source={x:Static local:Config.Data}}"  Margin="0,0,32,0" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#00000000" Foreground="White" BorderBrush="White"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
